# Configuration compl�te du SDK Scheme Adapter

# Endpoints
PEER_ENDPOINT=ml-testing-toolkit:4040
BACKEND_ENDPOINT=http://host.docker.internal:5000

# DFSP Configuration
DFSP_ID=itk-load-test-dfsp

# Cache/Redis (requis par le SDK)
CACHE_URL=redis://redis:6379

# Server Configuration
INBOUND_LISTEN_PORT=4000
OUTBOUND_LISTEN_PORT=4001
TEST_LISTEN_PORT=4002

# TLS/Security (d�sactiv� pour dev)
INBOUND_MUTUAL_TLS_ENABLED=false
OUTBOUND_MUTUAL_TLS_ENABLED=false
VALIDATE_INBOUND_JWS=false
JWS_SIGN=false
JWS_SIGNING_KEY_PATH=/opt/app/secrets/jwsSigningKey.key
JWS_VERIFICATION_KEYS_DIRECTORY=/opt/app/secrets

# Callbacks
AUTO_ACCEPT_QUOTES=true
AUTO_ACCEPT_PARTY=true
USE_QUOTE_SOURCE_FSP_AS_TRANSFER_PAYEE_FSP=true

# Logging
LOG_LEVEL=info

# ILP
ILP_SECRET=secret

# Timeouts
REQUEST_PROCESSING_TIMEOUT_SECONDS=30

# WSO2 Auth (d�sactiv�)
OAUTH_TOKEN_ENDPOINT=
OAUTH_CLIENT_KEY=
OAUTH_CLIENT_SECRET=
OAUTH_REFRESH_SECONDS=3600

# PM4ML (d�sactiv�)
PM4ML_ENABLED=false

# ALS (Account Lookup Service)
ALS_ENDPOINT=ml-testing-toolkit:4040

# Quotes
QUOTES_ENDPOINT=ml-testing-toolkit:4040

# Transfers
TRANSFERS_ENDPOINT=ml-testing-toolkit:4040

# Bulk Quotes
BULK_QUOTES_ENDPOINT=ml-testing-toolkit:4040

# Bulk Transfers  
BULK_TRANSFERS_ENDPOINT=ml-testing-toolkit:4040

# Transaction Requests
TRANSACTION_REQUESTS_ENDPOINT=ml-testing-toolkit:4040

# Participants
PARTICIPANTS_ENDPOINT=ml-testing-toolkit:4040

# Kafka (D�sactiv�)
ENABLE_BACKEND_EVENT_HANDLER=false
ENABLE_FSPIOP_EVENT_HANDLER=false

RESOURCE_VERSIONS=parties=1.1,quotes=1.1,transfers=1.1,bulkQuotes=1.1,bulkTransfers=1.1

# Body Size Limits
INBOUND_MAX_BODY_SIZE=10mb
OUTBOUND_MAX_BODY_SIZE=10mb
